@model KontinentService.ViewModels.ToursExtViewModel

@{
    ViewData["Title"] = "EditProperties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Дополнительные свойства</h2>

<h5>@Model.Title</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProperties">
            <div class="form-group">
                <div class="checkbox">
                    @for (int i = 0; i < Model.Properties.Count; i++)
                    {
                        <input type="checkbox" asp-for="@Model.Properties[i].IsChecked" /> @Model.Properties[i].Title
                        <input type="hidden" asp-for="@Model.Properties[i].Id" />
                        <input type="hidden" asp-for="@Model.Properties[i].Title" />
                        <br />
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">&lt; К списку туров</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
